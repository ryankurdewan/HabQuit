<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/activity_horizontal_margin"
              android:orientation="vertical">

    <TextView
        android:id="@+id/page_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:focusable="false"
        android:gravity="center"
        android:text="Select a Habit"
        android:textSize="32sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/add_habit_smoking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/add_habit_button"
            android:layout_weight="1"
            android:background="@color/lightBlue"
            android:padding="@dimen/add_habit_button_image"
            android:scaleType="fitCenter"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_smoking"
            tools:ignore="ContentDescription,VectorDrawableCompat"/>

        <ImageButton
            android:id="@+id/add_habit_drinking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/add_habit_button"
            android:layout_weight="1"
            android:background="@color/lightBlue"
            android:padding="@dimen/add_habit_button_image"
            android:scaleType="fitCenter"
            android:textAlignment="inherit"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_booze"
            tools:ignore="VectorDrawableCompat"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/add_habit_soda"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/add_habit_button"
            android:layout_weight="1"
            android:background="@color/lightBlue"
            android:padding="@dimen/add_habit_button_image"
            android:scaleType="fitCenter"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_soda"
            tools:ignore="VectorDrawableCompat"/>

        <ImageButton
            android:id="@+id/add_habit_smokeless_tobacco"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/add_habit_button"
            android:layout_weight="1"
            android:background="@color/lightBlue"
            android:padding="@dimen/add_habit_button_image"
            android:scaleType="fitCenter"
            android:textAlignment="center"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_smoke_free_tobacco"
            tools:ignore="VectorDrawableCompat"/>

    </LinearLayout>

    <Button
        android:id="@+id/add_habit_custom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/add_habit_button"
        android:layout_weight="1"
        android:background="@color/lightBlue"
        android:text="Custom Habit"
        android:textColor="@color/white"
        android:textSize="24sp"/>


</LinearLayout>